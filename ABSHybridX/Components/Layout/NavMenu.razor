@using Microsoft.Extensions.Hosting
@inject IHostEnvironment Host

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">Dashboard</FluentNavLink>
            <FluentNavLink Href="recipe/editor" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">Recipe Editor</FluentNavLink>
            <FluentNavGroup Title="Configuration" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">
                <FluentNavGroup Title="Material Definitions" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">
                    <FluentNavLink Href="material/aggregate-definitions" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">Agg. Hot Bins</FluentNavLink>
                    <FluentNavLink Href="material/bitumen-definitions" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">Bitumen</FluentNavLink>
                </FluentNavGroup>
                <FluentNavGroup Title="Material Loading" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">
                    <FluentNavLink Href="material/aggregate-loading" Icon="@(new Icons.Regular.Size20.ContentViewGallery())" IconColor="Color.Accent">Agg. Hot Bins</FluentNavLink>
                </FluentNavGroup>
            </FluentNavGroup>

            @if (Host.IsDevelopment())
            {
                <FluentNavLink Href="counter" Icon="@(new Icons.Regular.Size20.NumberSymbolSquare())" IconColor="Color.Accent">Counter</FluentNavLink>
                <FluentNavLink Href="weather" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Color.Accent">Weather</FluentNavLink>
            }

        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
